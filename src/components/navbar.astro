<script type="text/javascript"is:inline>
document.addEventListener('DOMContentLoaded', function() {
    const servicesDropdown = document.querySelector('#servicesDropdown');
    const dropdownMenu = servicesDropdown.nextElementSibling;
    const businessConsulting = document.querySelector('#businessConsulting');
    const businessSubmenu = document.querySelector('#businessSubmenu');
    const hoverDistance = 10; // Distance in pixels

    let isSubmenuVisible = false;
    let timeout;

    function showSubmenu() {
        businessSubmenu.style.display = 'block';
        isSubmenuVisible = true;
    }
  

    function hideSubmenu() {
        businessSubmenu.style.display = 'none';
        isSubmenuVisible = false;
    }

    function isMouseNear(x, y, element) {
        const rect = element.getBoundingClientRect();
        return (
            x >= rect.left - hoverDistance &&
            x <= rect.right + hoverDistance &&
            y >= rect.top - hoverDistance &&
            y <= rect.bottom + hoverDistance
        );
    }

    // Toggle the main dropdown on click
    servicesDropdown.addEventListener('click', function(event) {
        event.preventDefault(); // Prevent the default link behavior
        dropdownMenu.classList.toggle('show'); // Toggle the dropdown visibility
    });

    // Show submenu on hover
    businessConsulting.addEventListener('mouseover', showSubmenu);
    businessSubmenu.addEventListener('mouseover', showSubmenu);
    Personal.addEventListener('mouseover',hideSubmenu)

    // Hide submenu if moving far away
    document.addEventListener('mousemove', function(event) {
        if (isSubmenuVisible) {
            if (!isMouseNear(event.clientX, event.clientY, businessConsulting) &&
                !isMouseNear(event.clientX, event.clientY, businessSubmenu)) {
                timeout = setTimeout(hideSubmenu, 10);
            } else {
                clearTimeout(timeout);
            }
        }
    });

    // Hide dropdown if clicking elsewhere
    document.addEventListener('click', function(event) {
        if (!servicesDropdown.contains(event.target) && !dropdownMenu.contains(event.target)) {
            dropdownMenu.classList.remove('show');
        }
    });
});



</script>


